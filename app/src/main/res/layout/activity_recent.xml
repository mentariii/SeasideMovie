<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".recent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:text="Recent"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:textColor="#808080"
            android:textSize="16sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="#232222"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="10dp"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/cv_gifted"
                    android:layout_height="120dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="#00232222"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/gifted"/>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/cv_blacklist"
                    app:cardBackgroundColor="#00232222"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/blacklist_port"/>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/cv_perfect"
                    android:layout_marginLeft="15dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="#00232222"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/perfectstranger_port"/>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="120dp"
                    android:id="@+id/cv_harry"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="#00232222"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/harry1_port"/>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/cv_frozen2"
                    android:layout_height="120dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="#00232222"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/frozen_port"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            </HorizontalScrollView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yesterday"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:textColor="#808080"
            android:textSize="16sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="#232222"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="10dp"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="120dp"
                        android:id="@+id/cv_alice"
                        android:layout_marginBottom="10dp"
                        app:cardBackgroundColor="#00232222"
                        app:cardCornerRadius="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/alice_port"/>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/cv_wakanda"
                        android:layout_marginLeft="15dp"
                        android:layout_height="120dp"
                        android:layout_marginBottom="10dp"
                        app:cardBackgroundColor="#00232222"
                        app:cardCornerRadius="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/wakanda_port"/>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/cv_love"
                        android:layout_marginLeft="15dp"
                        android:layout_height="120dp"
                        android:layout_marginBottom="10dp"
                        app:cardBackgroundColor="#00232222"
                        app:cardCornerRadius="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/lvegard_port"/>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="120dp"
                        android:id="@+id/cv_myname"
                        android:layout_marginBottom="10dp"
                        app:cardBackgroundColor="#00232222"
                        app:cardCornerRadius="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/myname_port"/>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/cv_insidious"
                        android:layout_height="120dp"
                        android:layout_marginBottom="10dp"
                        app:cardBackgroundColor="#00232222"
                        app:cardCornerRadius="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/insidious"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="recommendation"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="#808080"
            android:textSize="20sp"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:scrollbars="none"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tag_horror"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        app:cardCornerRadius="20dp"
                        android:textSize="12sp"
                        app:cardBackgroundColor="#2666ffe2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:textAlignment="center"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:text="#HORROR"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tag_animation"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        app:cardCornerRadius="20dp"
                        android:textSize="12sp"
                        app:cardBackgroundColor="#2666ffe2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:textAlignment="center"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:text="#ANIMATION"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tag_fantasy"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        app:cardCornerRadius="20dp"
                        android:textSize="12sp"
                        app:cardBackgroundColor="#2666ffe2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:textAlignment="center"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:text="#FANTASY"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tag_romance"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        app:cardCornerRadius="20dp"
                        android:textSize="12sp"
                        app:cardBackgroundColor="#2666ffe2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:textAlignment="center"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:text="#ROMANCE"/>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tag_thiller"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        app:cardCornerRadius="20dp"
                        android:textSize="12sp"
                        app:cardBackgroundColor="#2666ffe2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:textAlignment="center"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:text="#THILLER"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tag_mystery"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        app:cardCornerRadius="20dp"
                        android:textSize="12sp"
                        app:cardBackgroundColor="#2666ffe2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:textAlignment="center"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:text="#MYSTERY"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tag_comedy"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        app:cardCornerRadius="20dp"
                        android:textSize="12sp"
                        app:cardBackgroundColor="#2666ffe2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:textAlignment="center"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:text="#COMEDY"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tag_action"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        app:cardCornerRadius="20dp"
                        android:textSize="12sp"
                        app:cardBackgroundColor="#2666ffe2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:textAlignment="center"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:text="#ACTION"/>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    </ScrollView>

</LinearLayout>